<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/text_current_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/item_current_password"
        android:textColor="@color/black_80"
        app:layout_constraintBottom_toBottomOf="@+id/edit_current_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/edit_current_password"
        />

    <TextView
        android:id="@+id/text_new_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/item_new_password"
        android:textColor="@color/black_80"
        app:layout_constraintBottom_toBottomOf="@+id/edit_new_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/edit_new_password"
        />

    <TextView
        android:id="@+id/text_check_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/item_check_password"
        android:textColor="@color/black_80"
        app:layout_constraintBottom_toBottomOf="@+id/edit_check_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/edit_check_password"
        />

    <EditText
        android:id="@+id/edit_current_password"
        style="@style/ProfileEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <EditText
        android:id="@+id/edit_new_password"
        style="@style/ProfileEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_current_password"
        />

    <TextView
        android:id="@+id/text_new_password_error"
        style="@style/FieldError"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/edit_check_password"
        app:layout_constraintTop_toBottomOf="@+id/edit_new_password"
        />

    <EditText
        android:id="@+id/edit_check_password"
        style="@style/ProfileEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_new_password_error"
        />

    <TextView
        android:id="@+id/text_confirm_password_error"
        style="@style/FieldError"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/edit_check_password"
        app:layout_constraintTop_toBottomOf="@+id/edit_check_password"
        />

    <Button
        android:id="@+id/button_change_password"
        style="@style/SecondaryButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/button_complete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_check_password"
        />
</android.support.constraint.ConstraintLayout>