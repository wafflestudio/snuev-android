<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:background">@color/colorBackground</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="PrimaryButton">
        <item name="android:background">@drawable/btn_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SecondaryButton">
        <item name="android:background">@drawable/btn_secondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="ToButton">
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">12sp</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:drawableLeft">@drawable/ic_bullet</item>
        <item name="android:drawableStart">@drawable/ic_bullet</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
    </style>

    <style name="LinkButton">
        <item name="android:background">@color/transparent</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:drawableRight">@drawable/ic_arrow_right</item>
        <item name="android:drawableEnd">@drawable/ic_arrow_right</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SearchFilterHeader">
        <item name="android:background">@drawable/bg_border_bottom_black_30</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Tab" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@color/colorPaleGray</item>
        <item name="tabSelectedTextColor">@color/colorPrimary</item>
        <item name="tabIndicatorColor">@color/transparent</item>
        <item name="tabTextAppearance">@style/TabText</item>
    </style>

    <style name="TabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/black_60</item>
    </style>

    <style name="ProfileEdit">
        <item name="android:textColor">@color/black_90</item>
        <item name="android:background">@drawable/bg_pale_gray_cornered</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">9dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <style name="FieldError">
        <item name="android:textColor">@color/colorError</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>
