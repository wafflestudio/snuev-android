<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:background">@color/colorBackground</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="PrimaryButton">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ToButton">
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">12sp</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:drawableLeft">@drawable/ic_bullet</item>
        <item name="android:drawableStart">@drawable/ic_bullet</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
    </style>

    <style name="LinkButton">
        <item name="android:background">@color/transparent</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:drawableRight">@drawable/ic_arrow_right</item>
        <item name="android:drawableEnd">@drawable/ic_arrow_right</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SearchFilterHeader">
        <item name="android:background">@drawable/bg_border_bottom_black_30</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="field_error">
        <item name="android:textColor">@color/colorError</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>
